<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <VBox id="vbox1" class="sapUiSmallMargin sapUiLargeMarginBegin">
        <Title id="accountDetails" text="Account details " level="H1"></Title>
        <HBox id="hbox1">
            <Label text="Bank account number" id="bankAccNumber" class="sapUiSmallMarginEnd"></Label>
            <Text text="389999****" id="bankAccValue"></Text>
        </HBox>
        <HBox id="hbox2">
            <Label text="Account Holder Name" id="ibAcHolderName" class="sapUiSmallMarginEnd"></Label>
            <Text text="Rajendra " id="idAcHolderName"></Text>
        </HBox>
        <HBox id="hbox3" class="sapUiSmalMarginBottom">
            <Label text="IFSC Code" id="lbIFSCCID" class="sapUiSmallMarginEnd"></Label>
            <Text text="000000****" id="idIfscode"></Text>
        </HBox>

        <Button id="openBankDetails" type="Neutral" text="{i18n>findMoreDetailBtn}" press=".onOpenBankDetails"/>

    </VBox>
</core:FragmentDefinition>